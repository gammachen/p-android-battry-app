<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ImageCompressionFragment">

    <!-- 压缩介绍 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:radius="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_detailed_description"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 压缩模式选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:radius="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_mode"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radio_group_compression_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_keep_original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image_compression_option_keep_original"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_delete_original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image_compression_option_delete_original" />
        </RadioGroup>
    </LinearLayout>

    <!-- 目录选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:radius="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_select_directory"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_select_directory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_select_image_directory" />

        <TextView
            android:id="@+id/tv_selected_directory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_no_directory_selected"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/secondary_text_light" />
    </LinearLayout>

    <!-- 压缩按钮 -->
    <Button
        android:id="@+id/btn_start_compression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_compression_start"
        android:textSize="18sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

    <!-- 压缩结果 -->
    <LinearLayout
        android:id="@+id/layout_compression_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        android:radius="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_compression_result"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_compression_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
